<resources>

    <!-- Base application theme. -->
    <style
        name="AppTheme"
        parent="Theme.AppCompat.Light"
        >

        <!-- Customize your theme here. -->
    </style>

    <style
        name="AppThemeLogo"
        parent="Theme.AppCompat.Light"
        >
        <item name="actionBarStyle">@style/MyActionBarLogo</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="MyActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/main_button</item>
        <item name="logo">@mipmap/ic_launcher</item>

        <item name="displayOptions">useLogo|showHome</item>
    </style>

</resources>
