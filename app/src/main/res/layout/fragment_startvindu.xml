<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background2"

    >




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_notice_layout_height"
            android:orientation="vertical"
            android:background="@color/background2_dull"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/main_notice_layout_padding">
            <TextView

                android:textColor="@color/text_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notification"
                android:textSize="@dimen/main_notice_text_size"
                />
        </ScrollView>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_gravity="center_vertical"

        android:paddingLeft="@dimen/main_knapp_layout_padding_side"
        android:paddingRight="@dimen/main_knapp_layout_padding_side"
        android:paddingTop="@dimen/main_knapp_layout_padding_oppned"
        android:paddingBottom="@dimen/main_knapp_layout_padding_oppned"
        >


        <Button
            android:id="@+id/knapp_nyperson"
            android:onClick="nyPerson"
            android:hint="@string/main_button_new_person"

            android:layout_width="match_parent"
            android:layout_height="@dimen/main_knapp_height"

            android:padding="@dimen/main_knapp_padding"
            android:layout_margin="@dimen/main_knapp_margin"

            android:background="@drawable/main_button2"
            android:drawableLeft="@drawable/ic_person_add_black_48dp"
            android:textSize="@dimen/main_knapp_text_size"
            />

        <Button
            android:id="@+id/knapp_vis_personer"
            android:onClick="visPersoner"
            android:hint="@string/main_button_show_persons"

            android:layout_width="match_parent"
            android:layout_height="@dimen/main_knapp_height"

            android:padding="@dimen/main_knapp_padding"
            android:layout_margin="@dimen/main_knapp_margin"

            android:background="@drawable/main_button2"
            android:drawableLeft="@drawable/ic_people_black_48dp"
            android:textSize="@dimen/main_knapp_text_size"

            />




    </LinearLayout>






</LinearLayout>
